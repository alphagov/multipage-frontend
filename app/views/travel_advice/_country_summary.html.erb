<% if presenter.parts.present? %>
  <h1 class="part-content-title">Summary</h1>
<% end %>

<ul class="country-metadata">
  <li><div class="label">Still current at:</div> <%= Date.today.strftime("%e %B %Y") %></li>
  <li><div class="label">Updated:</div> <%= presenter.last_reviewed_or_updated_at.strftime("%e %B %Y") %></li>
  <li><%= simple_format presenter.change_description %></li>
</ul>

<% if presenter.alert_status.present? %>
  <div class="application-notice help-notice">
    <% presenter.alert_status.each do |alert| %>
      <p><%= raw t("travel_advice.alert_status.#{alert}") %></p>
    <% end %>
  </div>
<% end %>

<% if presenter.image %>
  <p>
    <img src="<%= presenter.image.url %>" alt="" />
  </p>
<% end %>
<% if presenter.document %>
  <div class="form-download">
  <p>
    <a href="<%= presenter.document.url %>">Download map (PDF)</a>
  </p>
  </div>
<% end %>
<%= raw presenter.summary %>
